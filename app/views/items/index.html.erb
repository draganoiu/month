
<div class="container content">
  <h1>Lessons</h1>

  <table>
    <thead>
      <tr>

        <th>Votes</th>
        <th>User</th>
        <th>Title</th>
        <th>Url</th>
        <th>Text</th>
        
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.votes_for.up.size %></td>
          <td><%= item.user.username %></td>
          <td><%= item.title %></td>
          <td><%= item.url %></td>
          <div class="row">
            <div class="col-md-6 col-md-offset-3">
              <div class="testimonials">
                <div class="active item">
                   <blockquote><td><%= item.text %></td></blockquote>
          </div>
            </div>
              </div>

          <td><%= link_to 'Show', item %></td>
          <% if user_signed_in?%>
            <% if current_user.voted_up_on? item%>
              <td><%= link_to 'Unvote', unvote_item_path(item),method: :delete %>
                <%else%>
              <td><%= link_to 'Vote', vote_item_path(item), method: :post %></td>

            <%end%>
          <%end%>
          </td>

          <%if item.user == current_user %>
            <td><%= link_to 'Edit', edit_item_path(item) %></td>
            <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <%end%>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Item', new_item_path %>
</div>
